# ============ 全局配置 ============
{
	on_demand_tls {
		ask http://localhost:21930/api/v1/caddy/ask-tls
	}
}

# ============ 主域名（固定） ============
dsrrr.com, mayi.one, perlapenna.ai {
	reverse_proxy localhost:21930 {
		flush_interval -1
	}
}

# ============ www 重定向 ============
www.dsrrr.com {
	redir https://dsrrr.com{uri} permanent
}

www.mayi.one {
	redir https://mayi.one{uri} permanent
}

www.perlapenna.ai {
	redir https://perlapenna.ai{uri} permanent
}

# ============ 分销商自定义域名（自动签发证书） ============
https:// {
	tls {
		on_demand
	}
	reverse_proxy localhost:21930 {
		flush_interval -1
	}
}
